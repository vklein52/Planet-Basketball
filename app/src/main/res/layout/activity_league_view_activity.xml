<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.illinois.finalproject.LeagueViewActivity">

    <LinearLayout
        android:id="@+id/first_team_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_team_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Team"
                android:textColor="@color/textColor"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/first_team_list_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record"
                android:textColor="@color/textColor"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/first_team_list_overall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Overall"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_team_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_team_item"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/second_team_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second Team"
                android:textColor="@color/textColor"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/second_team_list_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/second_team_list_overall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Overall"
            android:textColor="@color/textColor"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
